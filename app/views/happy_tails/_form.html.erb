<%= form_for @happy_tail, :html => { :multipart => true } do |f| %>  
  <%= render "shared/error_messages", :target => @happy_tail %>
  <%= render "shared/markdown_syntax_guide" %>  
  <p>
    <%= f.label :name, "Name" %><br />
    <%= f.text_field :name %>
  </p>
  <p>  
    <%= f.label :content, "Content" %><br />
    <%= f.text_area :content, :rows => 10 %>  
  </p>
  <p>
   	<%= f.label :photo, "Photo" %><br />
	  <% if @happy_tail.photo? %>
	    <%= image_tag @happy_tail.photo.url(:regular) %><br />
	    File has already been uploaded. Replace file?<br />
	  <% end %>
	  <%= f.file_field :photo %>
  </p>
  <p>  
    <%= f.submit %>  
  </p>
<% end %>