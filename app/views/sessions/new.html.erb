<% title "Log In" %>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :name_or_email_address %><br />  
    <%= text_field_tag :name_or_email_address, params[:name_or_email_address] %>  
  </p>
  <p>
    <%= label_tag :password %><br />  
    <%= password_field_tag :password %>  
  </p>
  <p>
    <%= submit_tag "Log In" %>
  </p>
<% end %>