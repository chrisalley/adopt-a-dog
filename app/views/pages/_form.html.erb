<%= form_for @page, :html => { :multipart => true } do |f| %>  
  <%= render "shared/error_messages", :target => @page %>
  <%= render "shared/markdown_syntax_guide" %>
  <p>
    <%= f.label :title, "Title" %><br />
    <%= f.text_field :title %>
  </p>
  <p>  
    <%= f.label :content, "Content" %><br />
    <%= f.text_area :content, :rows => 10 %>  
  </p>
  <p>
   	<%= f.label :form, "Form" %><br />
	  <% if @page.form? %>
	    File has already been uploaded. Replace file?<br />
	  <% end %>
	  <%= f.file_field :form %>
  </p>
  <p>  
    <%= f.submit %>  
  </p>
<% end %>